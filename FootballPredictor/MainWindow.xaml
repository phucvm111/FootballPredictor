<Window x:Class="FootballPredictor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FootballPredictor"
        Title="Dự đoán Ngoại hạng Anh" Height="560" Width="920"
        Background="#F5F7FA">
    <Window.Resources>
        <local:ResultToBrushConverter x:Key="ResultToBrushConverter"/>
        <Style x:Key="FormDotStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="14"/>
            <Setter Property="Height" Value="14"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Stroke" Value="#333"/>
            <Setter Property="StrokeThickness" Value="0.8"/>
        </Style>
        <Style x:Key="ListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" 
                                BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="6"
                                Margin="0,4" Padding="10">
                            <ContentPresenter />
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.1" Color="Black"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#E8F0FE"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#A0C4FF"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#D6E4FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" 
                                CornerRadius="8" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#2563EB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Image Source="/tải xuống (1).jpg"
               Stretch="UniformToFill" 
               Opacity="0.15" />
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="1" Text="Danh sách trận đấu sắp tới (EPL)" FontSize="18" FontWeight="Bold" 
                               Foreground="#1F2937" VerticalAlignment="Center"/>
            </Grid>

            <ListBox x:Name="MatchesListBox" Grid.Row="1" Margin="0,15,0,15" 
                             Background="Transparent" BorderThickness="0" ItemContainerStyle="{StaticResource ListBoxItemStyle}">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type local:MatchView}">
                        <Border Padding="12" Margin="0,2" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="6">
                            <StackPanel>
                                <TextBlock FontWeight="SemiBold" Text="{Binding Title}" FontSize="16" Foreground="#1F2937"/>
                                <Grid Margin="8,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding HomeName}" Width="180" FontSize="14" Foreground="#374151"/>
                                        <ItemsControl ItemsSource="{Binding HomeForm}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Ellipse Style="{StaticResource FormDotStyle}"
                                                                 Fill="{Binding Converter={StaticResource ResultToBrushConverter}}"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding AwayName}" Width="180" FontSize="14" Foreground="#374151"/>
                                        <ItemsControl ItemsSource="{Binding AwayForm}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Ellipse Style="{StaticResource FormDotStyle}"
                                                                 Fill="{Binding Converter={StaticResource ResultToBrushConverter}}"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Button Grid.Row="2" Content="Lấy trận và dự đoán" Height="40" Style="{StaticResource ButtonStyle}"
                            Click="PredictButton_Click"/>
            <ScrollViewer Grid.Row="3" Margin="0,15,0,0">
                <TextBlock x:Name="PredictionText" FontSize="14" TextWrapping="Wrap" Foreground="#1F2937"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>